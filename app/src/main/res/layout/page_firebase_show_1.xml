<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorAccent6"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingTop="10dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp">


    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="83dp" android:id="@+id/textView"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa -->
            <FrameLayout
                    android:id="@+id/dummyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" >
                <fragment
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:name="com.google.android.gms.maps.SupportMapFragment" />
            </FrameLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus1TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus1"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus1DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus2TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus2"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus2DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus3TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus3"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus3DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus4TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus4"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus4DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus5TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus5"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus5DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/bus6TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus6"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/bus6DurationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
            </LinearLayout>



            <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/b_Main2Activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/phone"
                    android:visibility="gone"
            />
            <Button
                    android:id="@+id/b_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:ems="12"
                    android:text="phone"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="#FF0000"
            />
            <!-- zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>

